{
  "name": "afragen/github-updater-translations",
  "description": "Translation language packs for GitHub Updater plugin",
  "type": "library",
  "keywords": [
    "github-updater",
    "language packs",
    "translations"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Andy Fragen",
      "email": "andy@thefragens.com",
      "homepage": "https://thefragens.com",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/afragen/github-updater-translations"
    }
  ],
  "support": {
    "issues": "https://github.com/afragen/github-updater-translations/issues",
    "source": "https://github.com/afragen/github-updater-translations"
  },
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "afragen/language-pack-maker": "dev-master",
    "wp-cli/i18n-command": "^2.2"
  },
  "scripts": {
    "post-update-cmd": [
      "cp -r ./originals/*.po ./languages/",
      "wp i18n make-json languages/"
    ]
  }
}
